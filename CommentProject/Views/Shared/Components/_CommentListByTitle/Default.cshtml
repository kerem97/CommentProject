@model List<Comment>

<div class="content-wrapper">
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="tab-content">
                                @foreach (var x in Model)
                                {
                                    <div class="timeline timeline-inverse">
                                        <div>
                                            <i class="fas fa-comments bg-warning"></i>
                                            <div class="timeline-item">
                                                <span class="time"><i class="far fa-clock"></i>@(((DateTime)x.CommentDate).ToString("dd-MMM-yyyy"))</span>
                                                <h3 class="timeline-header"><a href="#">@x.AppUser.Name @x.AppUser.Surname</a> Kategori:@x.Title.Category.CategoryName</h3>
                                                <div class="timeline-body">
                                                    @x.CommentDetails
                                                </div>
                                            </div>
                                        </div>
                                        <div>
                                            <i class="far fa-clock bg-gray"></i>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>