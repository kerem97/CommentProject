@model List<Category>
@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<div class="container">
   
    <table class="table table-bordered">

        <tr>
            <th>#</th>
            <th>Kategori Adı</th>
            <th>Kategori Durumu</th>
            <th>Sil</th>
            <th>Güncelle</th>
            <th>Başlıklar</th>
        </tr>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.CategoryID</td>
                <td>@x.CategoryName</td>
                <td>@x.Status</td>
                <td><a class="btn btn-outline-danger" href="#">Sil</a></td>
                <td><a class="btn btn-outline-warning" href="#">Güncelle</a></td>
                <td><a class="btn btn-outline-dark" href="#">Başlıklar</a></td>

            </tr>
        }
    </table>
    <a href="#" class="btn btn-outline-info">Yeni Kategori Ekle</a>
</div>