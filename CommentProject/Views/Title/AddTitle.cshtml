@model Title
@{
    Layout = null;
}



<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<br />
<div class="container">
    <br /><br />
    <form method="post">
        <h3>Yeni Başlık Oluşturma Sayfası</h3>
        <label>Kategori Seçiniz</label>
        @Html.DropDownListFor(x=>x.CategoryID,(List<SelectListItem>)ViewBag.v , new {@class="form-control"})
        <br />
        <label>Başlığı Giriniz</label>
        <input type="text" asp-for="TitleName" class="form-control" />
        <br />
        <button class="btn btn-outline-success">Oluştur</button>
    </form>
</div>